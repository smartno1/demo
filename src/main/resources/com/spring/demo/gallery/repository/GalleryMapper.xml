<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.demo.gallery.repository.GalleryMapper">
    <resultMap id="galleryMap" type="com.spring.demo.gallery.domain.Gallery">
        <result property="likeCnt" column="like_cnt" />
        <result property="regDate" column="reg_date" />
    </resultMap>

    <insert id="save">
        INSERT INTO gallery
            (src, text, account)
        VALUES (#{src}, #{text}, #{account})
    </insert>

    <select id="findOne" resultMap="galleryMap">
        SELECT *
        FROM gallery
        WHERE id=#{id}
    </select>

    <select id="findAll" resultMap="galleryMap">
        WITH v_gallery AS
                 (
                     SELECT
                         ROW_NUMBER() OVER (ORDER BY id DESC) AS RowNumber, gallery.*
                     FROM gallery
                 )
        SELECT *
        FROM v_gallery
        WHERE RowNumber BETWEEN ((#{pageNum} - 1) * #{amount} + 1) AND (#{pageNum} * #{amount})
    </select>

    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*)
        FROM gallery
    </select>

    <update id="modify">
        UPDATE gallery
        SET text = #{text}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM gallery
        WHERE id=#{id};
    </delete>
</mapper>