<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.spring.demo.shop.repository.ShopMapper">

    <resultMap id="shopMap" type="com.spring.demo.shop.domain.Shop">
        <result property="regDate" column="reg_date"/>
    </resultMap>


    <insert id="insert">
        INSERT INTO shop_stock
        (name, content, src, price, stock, origin)
        VALUES (#{name}, #{content}, #{src}, #{price}, #{stock}, #{origin})
    </insert>

    <update id="update">
        UPDATE shop_stock
        SET name=#{name}, content=#{content}, src=#{src}, price=#{price}, stock=#{stock}, origin=#{origin}
        WHERE id=#{id}
    </update>

    <delete id="delete">
        DELETE FROM shop_stock
        WHERE id = #{id}
    </delete>

    <select id="findAll" resultMap="shopMap">
        SELECT *
        FROM shop_stock
        <include refid="search" />
        ORDER BY id DESC
        LIMIT #{start}, #{amount}
    </select>

    <select id="findOne" resultMap="shopMap">
        SELECT *
        FROM shop_stock
        WHERE id=#{id}
    </select>

    <select id="getTotalCount" resultType="int">
        SELECT COUNT(*)
        FROM shop_stock
        <include refid="search" />
    </select>

    <sql id="search">
        <if test="type == 'name'">WHERE name LIKE CONCAT('%', #{keyword}, '%')</if>
        <if test="type == 'content'">WHERE content LIKE CONCAT('%', #{keyword}, '%')</if>
        <if test="type == 'tc'">
            WHERE name LIKE CONCAT('%', #{keyword}, '%')
            OR content LIKE CONCAT('%', #{keyword}, '%')
        </if>
    </sql>
</mapper>